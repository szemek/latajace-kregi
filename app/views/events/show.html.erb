<div class="row">
  <div class="small-12 large-9 columns">
    <h2><%= @event.name %></h2>
    <p><%= I18n.l(@event.starting_at, locale: :pl, format: '%d %b %Y') %></p>
    <p><%= simple_format(auto_link(@event.description)) %></p>
  </div>
  <div class="small-12 large-3 columns">
    <% if @rsvp %>
      <div id="rsvp-container">
        <div id="rsvp-mine">
          <h3>
            Weźmiesz udział
          </h3>
          <a href="#" class="rsvp-change label" data-reveal-id="rsvp-change" aria-label="Zmień zdanie">
            Zmień zdanie
          </a>

          <div id="rsvp-change" class="reveal-modal" data-reveal>
            <h3>Czy nadal chcesz wziąć udział w wydarzeniu?</h3>
            <div class="action"><a class="button success yes close-modal">Tak</a></div>
            <div class="action"><%= button_to('Zrezygnuj', event_rsvp_path(@event, @rsvp), method: :delete, class: 'button alert') %></div>

            <a class="close-reveal-modal">&#215;</a>
          </div>
        </div>
      </div>
    <% else %>
      <% if current_user %>
        <%= form_for([@event, Rsvp.new]) do |f| %>
          <%= f.submit 'Dołącz', class: 'button success' %>
        <% end %>
      <% else %>
        <%= link_to 'Zaloguj, aby dołączyć', new_user_session_path, class: 'button info' %>
      <% end %>
    <% end %>

    <ul>
      <% @participants.each do |participant| %>
        <li><%= participant.fullname %></li>
      <% end %>
    </ul>
  </div>
</div>
