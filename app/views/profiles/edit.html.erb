<div class="row">
  <div class="small-4 columns">
    <h1>Edycja profilu</h1>
  </div>
</div>

<%= form_for @profile do |f| %>
  <div class="row">
    <div class="small-4 columns">
      <label>Imię i nazwisko
        <%= f.text_field :fullname %>
      </label>
    </div>
  </div>
  <div class="row">
    <div class="small-4 columns">
      <label>O sobie
        <%= f.text_area :bio %>
      </label>
    </div>
  </div>
  <div class="row">
    <div class="small-4 columns">
      <label>Zdjęcie
        <%= image_tag(@profile.photo.thumbnail.url) if @profile.photo? %>
        <%= f.file_field :photo %>
      </label>
    </div>
  </div>
  <div class="row">
    <div class="small-4 columns">
      <%= f.submit 'Aktualizuj', class: 'button small' %>
    </div>
  </div>
<% end %>
