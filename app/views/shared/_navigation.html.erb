<nav class="top-bar" data-topbar>
  <ul class="title-area">
    <li class="name">
      <h1>
        <%= link_to dashboard_path do %>
          <%= image_tag 'logo.jpg', class: 'logo' %>
        <% end %>
      </h1>
    </li>
     <!-- Remove the class "menu-icon" to get rid of menu icon. Take out "Menu" to just have icon alone -->
    <li class="toggle-topbar menu-icon"><a href="#"><span>Menu</span></a></li>
  </ul>

  <section class="top-bar-section">
    <ul class="left">
      <li><%= link_to t('nav.circles'), circles_path %></li>
      <li><%= link_to t('nav.people'), people_path %></li>
      <li><%= link_to t('nav.heroines'), heroines_path %></li>
      <li><%= link_to t('nav.organizers'), organizers_path %></li>
    </ul>

    <ul class="right">
      <%= render 'shared/languages' %>

      <% if current_user %>
        <li class="has-dropdown">
          <a href="#"><%= t('nav.settings') %></a>
          <ul class="dropdown">
            <li><%= link_to t('nav.profile'), edit_profile_path %></li>
            <li><%= link_to t('nav.account'), edit_user_registration_path %>
          </ul>
        </li>
        <li class="divider"></li>
      <% end %>

      <% if current_user %>
        <li><%= link_to t('nav.users.sign_out'), destroy_user_session_path, method: :delete %></li>
      <% else %>
        <li><%= link_to t('nav.users.sign_in'), new_user_session_path %></li>
      <% end %>
    </ul>
  </section>
</nav>
