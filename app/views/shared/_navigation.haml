%nav.row
  = link_to(start_path) do
    .logo

  %ul
    %li
      = link_to(people_path, class: 'menu-item') do
        .menu-item-ellipse
        .menu-item-text= t('nav.people')
        .menu-item-color.menu-item-people
    %li
      = link_to(circles_path, class: 'menu-item') do
        .menu-item-ellipse
        .menu-item-text= t('nav.circles')
        .menu-item-color.menu-item-circles
    %li
      = link_to(edit_profile_path, class: 'menu-item') do
        .menu-item-ellipse
        .menu-item-text= t('nav.profile')
        .menu-item-color.menu-item-profile
    %li
      = link_to(destroy_user_session_path, method: :delete, class: 'menu-item') do
        .menu-item-ellipse
        .menu-item-text= t('nav.users.sign_out')
        .menu-item-color.menu-item-sign-out
    - if current_user.admin?
      %li
        = link_to(admin_root_path, class: 'menu-item') do
          .menu-item-ellipse
          .menu-item-text Admin
